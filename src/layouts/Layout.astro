      title={makeTitle}
      description="DevArmor is the first platform for security reviews, threat modeling, and requirements enforcement."
      canonical={canonicalURL}
      twitter={{
        creator: "@kavousian",
        site: "@web3templates",
        card: "summary_large_image",
