---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Icon } from "astro-icon/components";

const jobs = [
  {
    title: "Founding AI Engineer",
    description:
      "Build and scale our AI-powered security automation platform. You'll work on cutting-edge AI systems that revolutionize how security is integrated into the development process.",
    link: "/careers/founding-ai-engineer",
  },
  {
    title: "Backend Engineer",
    description:
      "Design and implement robust backend systems that power our security automation platform. You'll work on scalable APIs, data processing pipelines, and security-focused features.",
    link: "/careers/backend-engineer",
  },
  {
    title: "Backend Engineer (Remote)",
    description:
      "Build secure, scalable infrastructure for our AI-native AppSec platform. Fully remote position with flexible working hours and global team collaboration.",
    link: "/careers/backend-engineer-remote",
  },
  {
    title: "Frontend Engineer",
    description:
      "Create beautiful, responsive user interfaces for our security platform. You'll work on modern web applications that make security accessible and intuitive for developers.",
    link: "/careers/frontend-engineer",
  },
  {
    title: "Founding Security Researcher",
    description:
      "Research and develop new security patterns, threat models, and automated security analysis techniques. Help shape the future of application security.",
    link: "/careers/security-researcher",
  },
];

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
---

<Layout
  title="Careers"
  description="Join DevArmor and help build the future of application security. We're looking for passionate individuals to join our mission."
  canonicalURL={canonicalURL}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">Join Our Team</Fragment>
      <Fragment slot="desc">
        We're building the future of application security. Join us in our
        mission to make security accessible to every developer.
      </Fragment>
    </Sectionhead>

    <div class="mt-16 flex flex-col gap-8 max-w-4xl mx-auto">
      {
        jobs.map((job) => (
          <div class="group relative rounded-lg border border-gray-200 p-6 shadow-sm transition-all hover:shadow-md dark:border-gray-800">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
              {job.title}
            </h3>
            <p class="mt-4 text-gray-600 dark:text-gray-400">
              {job.description}
            </p>
            <a
              href={job.link}
              class="mt-6 inline-flex items-center text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">
              Learn more
              <Icon
                name="mdi:arrow-right"
                class="ml-2 h-5 w-5"
                aria-hidden="true"
              />
            </a>
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
