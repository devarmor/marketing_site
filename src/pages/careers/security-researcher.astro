---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import ApplicationFooter from "@components/careers/application-footer.astro";
---

<Layout title="Security Researcher">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Security Researcher</Fragment>
      <Fragment slot="desc"
        >Research and develop innovative security solutions.<br />
      </Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-8 mx-auto max-w-4xl mt-16">
      <div class="flex justify-center mb-8">
        <a
          href="https://forms.gle/VYgs78pD4nLFHsZRA"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-400 transition-colors"
          >Apply Now</a
        >
      </div>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          About the Role
        </h2>
        <p class="text-gray-600 dark:text-gray-100">
          We're looking for a security researcher to help us develop innovative
          solutions for automated security analysis. You'll work on identifying
          security patterns, developing new analysis techniques, and improving
          our platform's security capabilities.
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          Responsibilities
        </h2>
        <ul
          class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-100">
          <li>Research security vulnerabilities and patterns</li>
          <li>Develop new security analysis techniques</li>
          <li>Create security rules and policies</li>
          <li>Collaborate with engineering teams</li>
          <li>Stay current with security trends and threats</li>
          <li>Contribute to security documentation and training</li>
        </ul>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          Required Skills & Experience
        </h2>
        <ul
          class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-100">
          <li>Strong background in application security</li>
          <li>Experience with security tools and frameworks</li>
          <li>Knowledge of common vulnerabilities and attacks</li>
          <li>Understanding of secure coding practices</li>
          <li>Experience with threat modeling</li>
        </ul>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          Preferred Qualifications
        </h2>
        <ul
          class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-100">
          <li>Experience with security automation</li>
          <li>Knowledge of AI/ML in security</li>
          <li>Contributions to security research</li>
          <li>Experience with compliance frameworks</li>
        </ul>
      </section>

      <div class="flex justify-center mt-12">
        <a
          href="https://forms.gle/VYgs78pD4nLFHsZRA"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-400 transition-colors"
          >Apply Now</a
        >
      </div>

      <ApplicationFooter />
    </div>
  </Container>
</Layout>
