---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import ApplicationFooter from "@components/careers/application-footer.astro";
---

<Layout title="Frontend Engineer">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Frontend Engineer</Fragment>
      <Fragment slot="desc"
        >Build beautiful, responsive user interfaces to be loved by developers
        and security engineers.<br />
      </Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-8 mx-auto max-w-4xl mt-16">
      <div class="flex justify-center mb-8">
        <a
          href="https://forms.gle/VYgs78pD4nLFHsZRA"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-400 transition-colors"
          >Apply Now</a
        >
      </div>

      <div
        class="grid grid-cols-2 md:grid-cols-4 gap-4 p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Location</p>
          <p class="font-medium text-gray-800 dark:text-white">Hybrid</p>
        </div>
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Job Type</p>
          <p class="font-medium text-gray-800 dark:text-white">Full-Time</p>
        </div>
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Experience Level
          </p>
          <p class="font-medium text-gray-800 dark:text-white">Mid-Senior</p>
        </div>
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Salary Range</p>
          <p class="font-medium text-gray-800 dark:text-white">
            $150,000-$170,000 Base + Equity
          </p>
        </div>
      </div>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          About the Role
        </h2>
        <p class="text-gray-600 dark:text-gray-100">
          We're looking for a frontend engineer to help us build intuitive and
          beautiful user interfaces for our security platform. You'll work
          closely with our design team and backend engineers to create seamless
          user experiences that make security accessible to developers.
        </p>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          Responsibilities
        </h2>
        <ul
          class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-100">
          <li>
            Develop responsive and accessible user interfaces in React and
            TypeScript
          </li>
          <li>
            Collaborate with designers and backend engineers to ensure best user
            experience
          </li>
          <li>Participate in code reviews and team discussions</li>
        </ul>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          Required Skills & Experience
        </h2>
        <ul
          class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-100">
          <li>Strong proficiency in React and TypeScript</li>
          <li>
            Experience with modern CSS frameworks (Ant Design, Tailwind CSS,
            Vite)
          </li>
          <li>Experience working with Figma workflows</li>
          <li>Knowledge of security best practices</li>
        </ul>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
          Preferred Qualifications
        </h2>
        <ul
          class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-100">
          <li>Experience with security tools or platforms</li>
          <li>Knowledge of data visualization libraries</li>
          <li>
            Experience with testing frameworks (Vitest, Jest, Cypress, etc)
          </li>
        </ul>
      </section>

      <div class="flex justify-center mt-12">
        <a
          href="https://forms.gle/VYgs78pD4nLFHsZRA"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-400 transition-colors"
          >Apply Now</a
        >
      </div>

      <ApplicationFooter />

      <div class="flex justify-center mt-12">
        <a
          href="https://forms.gle/VYgs78pD4nLFHsZRA"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-400 transition-colors"
          >Apply Now</a
        >
      </div>
    </div>
  </Container>
</Layout>
